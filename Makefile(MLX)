NAME = so_long

SRC = \
so_long.c \

OBJ = $(SRC:.c=.o)

LIBFT_DIR = libft

MLX42_DIR = MLX42

LIBFT_A = $(LIBFT_DIR)/libft.a

MLX42 = ./MLX42/libmlx42.a

FLAGS_MLX42 = -lglfw3 -framework Cocoa -framework OpenGL -framework IOKit

CFLAGS = -Wall -Wextra -Werror

CC = cc

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -I $(LIBFT_DIR) $(LIBFT_A) $(OBJ) -o $(NAME) $(MLX42) $(FLAGS_MLX42)

$(LIBFT_A):
	make -C libft

$(MLX42):
	make -C ./MLX42

%.o: %.c | $(LIBFT_A)
	$(CC) $(CFLAGS) -I $(LIBFT_DIR) $(MLX42_DIR) -c -o $@ $^

clean:
	rm -f $(OBJ)
	make -C libft clean

fclean:	clean
	rm -f $(NAME) libft/libft.a

re:	fclean all

.PHONY: all libft clean fclean re